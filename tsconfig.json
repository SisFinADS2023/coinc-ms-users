{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "ESNext",
    "outDir": ".esbuild",
    "moduleResolution": "node",
    "module": "ESNext",
    "lib": ["ES2015"],
    "types": ["reflect-metadata", "node", "jest"],
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
